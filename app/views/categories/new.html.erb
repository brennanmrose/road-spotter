<h1>Find or Create Your Category</h1>

<%= form_for @category do |f| %>
	<%= f.text_field :name, list: "categories_autocomplete" %>
	<datalist id="categories_autocomplete">
		<% Category.all.each do |category| %>
			<option value="<%= category.name %>">
		<% end %>
	</datalist>
	<br>
	<%= f.submit 'Select Category' %>
<% end %>