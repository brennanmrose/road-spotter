<h1>Sign Up Here</h1>
<%= form_for @user do |f| %>
	<%= render partial: 'layouts/errors', locals: {object: @user} %>
	<%= f.label :name %>
	<%= f.text_field :name, required: true %>
	<br>
	<br>
	<%= f.label :email %>
	<%= f.email_field :email, required: true %>
	<br>
	<br>
	<%= f.label :password %>
	<%= f.password_field :password, required: true %>
	<br>
	<br>
	<%= f.submit 'Sign Up' %>
<% end %>