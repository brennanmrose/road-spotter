<!DOCTYPE html>
<html>
  <head>
    <title>RoadSpotter</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= if_logged_in_display_categories %>
    <%= if_logged_in_display_reported_issues %>
    <%= if_logged_in_display_user_show %>
    <%= if_logged_in_display_logout %>
    <% if flash[:notice] %>
      <div class='notice'><%= flash[:notice] %></div>
    <% end %>
    <%= yield %>
  </body>
</html>
