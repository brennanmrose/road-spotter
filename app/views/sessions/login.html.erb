<h1>Log In Here</h1>

<%= form_for @user, url: '/login' do |f| %>
	<% if flash[:notice] %>
  	<div class='notice'><%= flash[:notice] %></div>
	<% end %>
	<br>
	<%= f.label :email %>
	<%= f.email_field :email %>
	<br>
	<br>
	<%= f.label :password %>
	<%= f.password_field :password %>
	<br>
	<br>
	<%= f.submit 'Log In' %>
<% end %>
<br>
<%= link_to 'Not a User? Signup!', signup_path %>